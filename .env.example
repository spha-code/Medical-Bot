# Medical Bot Environment Variables
# Copy this to .env and fill in your values

# API Keys (get from respective providers)
OPENAI_API_KEY=sk-your-openai-key-here
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=us-east-1-aws

# Authentication
JWT_SECRET_KEY=your-secure-random-jwt-secret-key-min-32-chars
API_KEY=your-api-key-for-external-access

# Server Configuration
FLASK_ENV=production
SECRET_KEY=your-flask-secret-key-min-32-chars

# Rate Limiting
RATELIMIT_DEFAULT=200 per day
RATELIMIT_STORAGE_URL=redis://localhost:6379

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Medical Compliance (HIPAA)
AUDIT_LOG_ENABLED=true
DATA_ENCRYPTION_KEY=your-encryption-key-for-pii
